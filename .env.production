# Suppress Node.js warnings
NODE_NO_WARNINGS=1

# Production environment configuration for CI/CD

# BASE_URL is injected from GitHub Secrets in CI workflow

# Environment
ENV=production

# Timeouts (production has longer timeouts)
TIMEOUT=45000
EXPECT_TIMEOUT=15000

# Workers (CI uses 50% of available cores for main tests)
WORKERS=100%

# Retries (CI retries failed tests)
RETRIES=2

# Browser configuration (production runs headless)
HEADED=false
SLOW_MO=0

# Trace mode (CI generates traces for all tests to showcase)
TRACE=on
