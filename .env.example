# Suppress Node.js warnings
NODE_NO_WARNINGS=1

# Base URL for the application
BASE_URL=https://www.company.de

# Environment (development, staging, production)
ENV=development

# Timeouts
TIMEOUT=30000
EXPECT_TIMEOUT=15000

# Workers (number of parallel workers: number or percentage like 50%)
WORKERS=50%

# Retries (number of times to retry failed tests)
RETRIES=1

# Browser configuration
HEADED=false
SLOW_MO=0

# Trace mode (off, on, on-first-retry, retain-on-failure, on-all-retries)
TRACE=on-first-retry
