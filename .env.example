# ==============================================================================
# Application Configuration
# ==============================================================================

# Challenge-specific base URLs (required for each challenge)
BASE_URL_UITESTINGPLAYGROUND=http://uitestingplayground.com
BASE_URL_AUTOMATIONEXERCISE=https://automationexercise.com
BASE_URL_JSONPLACEHOLDER=https://jsonplaceholder.typicode.com
BASE_URL_REQRES=https://reqres.in
BASE_URL_HTTPBIN=https://httpbin.org

# Challenge descriptions (for reports)
CHALLENGE_DESC_UITESTINGPLAYGROUND=UITestingPlayground Challenge - 23 real-world UI testing scenarios
CHALLENGE_DESC_AUTOMATIONEXERCISE=AutomationExercise Challenge - 18 comprehensive e-commerce test scenarios

# Accessibility audit targets
BASE_URL_AXE_W3C_BAD=https://www.w3.org/WAI/demos/bad/
BASE_URL_AXE_W3C_AFTER=https://www.w3.org/WAI/demos/after/
BASE_URL_AXE_DEQUE_MARS=https://dequeuniversity.com/demo/mars

# Lighthouse audit targets
BASE_URL_LIGHTHOUSE_POLYMER=https://shop.polymer-project.org/
BASE_URL_LIGHTHOUSE_W3C_BAD=https://www.w3.org/WAI/demos/bad/

# Suppress Node.js warnings
NODE_NO_WARNINGS=1

# ==============================================================================
# Test Execution Configuration
# ==============================================================================

# Global timeout for all Playwright actions (milliseconds)
TIMEOUT=40000

# Timeout for assertions (milliseconds)
EXPECT_TIMEOUT=15000

# Number of parallel test workers (number or percentage like 50%)
# Percentage is calculated based on machine CPU cores
WORKERS=10

# Number of times to retry failed tests
RETRIES=1

# Number of times to repeat each test (0 = disabled)
REPEAT_EACH=0

# Run tests fully parallel (1 = enabled, empty = disabled)
FULLY_PARALLEL=1

# Prevent test.only() from running (1 = enabled, empty = disabled)
FORBID_ONLY=

# Maximum number of test failures before stopping (0 = unlimited)
MAX_FAILURES=0

# ==============================================================================
# Browser Selection
# ==============================================================================

# Enable/disable Chromium browser tests (1 = enabled, empty = disabled)
CHROMIUM=1

# Enable/disable Firefox browser tests (1 = enabled, empty = disabled)
FIREFOX=

# Enable/disable WebKit browser tests (1 = enabled, empty = disabled)
WEBKIT=

# Browser channel to use (e.g., chrome, chrome-beta, msedge, msedge-beta, msedge-dev)
# Leave empty to use default browser installation
BROWSER_CHANNEL=

# ==============================================================================
# Browser Behavior
# ==============================================================================

# Run tests in headed mode (1 = headed, empty = headless)
HEADED=

# Slow down operations by specified milliseconds for debugging (0 = disabled)
SLOW_MO=0

# Browser launch arguments (comma-separated, e.g., "--disable-blink-features=AutomationControlled,--no-sandbox")
BROWSER_ARGS=

# ==============================================================================
# Viewport & Device Configuration
# ==============================================================================

# Viewport width in pixels (0 = use device default)
VIEWPORT_WIDTH=1280

# Viewport height in pixels (0 = use device default)
VIEWPORT_HEIGHT=720

# Device scale factor (1 = normal, 2 = retina, etc.)
DEVICE_SCALE_FACTOR=1

# User agent string (empty = use browser default)
USER_AGENT=

# Locale (e.g., en-US, de-DE, fr-FR)
LOCALE=

# Timezone ID (e.g., America/New_York, Europe/Berlin, UTC)
TIMEZONE_ID=

# Enable touch events (1 = enabled, empty = disabled)
HAS_TOUCH=

# Emulate mobile device (1 = enabled, empty = disabled)
IS_MOBILE=

# ==============================================================================
# Geolocation & Permissions
# ==============================================================================

# Geolocation coordinates (format: latitude,longitude,accuracy)
# Example: 40.7128,-74.0060,10
GEOLOCATION=

# Browser permissions (comma-separated, e.g., geolocation,notifications,camera)
# Available: geolocation, notifications, camera, microphone, clipboard-read, clipboard-write
PERMISSIONS=

# ==============================================================================
# Appearance & Rendering
# ==============================================================================

# Color scheme (light, dark, no-preference)
COLOR_SCHEME=

# Reduced motion preference (1 = enabled, empty = disabled)
REDUCED_MOTION=

# Forced colors mode (1 = enabled, empty = disabled)
FORCED_COLORS=

# ==============================================================================
# Network & Security
# ==============================================================================

# Ignore HTTPS errors (1 = enabled, empty = disabled)
IGNORE_HTTPS_ERRORS=

# Bypass Content Security Policy (1 = enabled, empty = disabled)
BYPASS_CSP=

# Enable JavaScript (1 = enabled, empty = disabled)
JAVASCRIPT_ENABLED=1

# Accept downloads automatically (1 = enabled, empty = disabled)
ACCEPT_DOWNLOADS=1

# Action timeout for click, fill, etc. (milliseconds, 0 = use global timeout)
ACTION_TIMEOUT=0

# Navigation timeout (milliseconds, 0 = use global timeout)
NAVIGATION_TIMEOUT=0

# Proxy server URL (e.g., http://proxy.example.com:8080)
PROXY_SERVER=

# ==============================================================================
# Debugging & Reporting
# ==============================================================================

# Trace mode for debugging (off, on, on-first-retry, retain-on-failure, on-all-retries)
# Dev: on-first-retry saves disk space while still capturing traces on failures
TRACE=on-first-retry

# Screenshot capture mode (off, on, only-on-failure)
SCREENSHOT=only-on-failure

# Video recording mode (off, on, on-first-retry, retain-on-failure, on-all-retries)
VIDEO=off

# Video size (widthxheight, e.g., 1280x720, empty = use viewport size)
VIDEO_SIZE=

# Video path (relative to outputDir, empty = default: test-results/)
VIDEO_PATH=


# ==============================================================================
# Audit Test Thresholds
# ==============================================================================

# Lighthouse Performance score (0 to 1, where 1 = 100%)
LIGHTHOUSE_PERFORMANCE=0.6

# Lighthouse Accessibility score (0 to 1)
LIGHTHOUSE_ACCESSIBILITY=0.6

# Lighthouse Best Practices score (0 to 1)
LIGHTHOUSE_BEST_PRACTICES=0.6

# Lighthouse SEO score (0 to 1)
LIGHTHOUSE_SEO=0.6

# Lighthouse PWA score (0 to 1)
LIGHTHOUSE_PWA=0

# Maximum allowed accessibility violations for Axe tests
AXE_MAX_VIOLATIONS=25

# ==============================================================================
# Performance Test Configuration
# ==============================================================================

# Performance test duration in seconds (default: 60)
PERFORMANCE_DURATION=60

# Performance test arrival rate (users per second, default: 5)
PERFORMANCE_ARRIVAL_RATE=5

# Performance test max concurrent users (default: 50)
PERFORMANCE_MAX_CONCURRENT=50
