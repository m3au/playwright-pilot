{
  "name": "tech-challenge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Technical challenge submission - Playwright test automation",
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "test-automation"
  ],
  "author": "m3au <m3au@pm.me>",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "bun@1.2.20",
  "scripts": {
    "pretest": "bunx bddgen",
    "test": "playwright test --project=chromium",
    "axe": "playwright test --project=axe",
    "lighthouse": "playwright test --project=lighthouse",
    "ui": "bun run test -- --ui",
    "headed": "bun run test -- --headed",
    "debug": "bun run test -- --debug",
    "failed": "bun run test -- --last-failed",
    "clean": "rm -rf test-output test-results playwright-report coverage *.log node_modules",
    "pin": "node scripts/pin-versions.mjs",
    "bump": "ncu -u && bun install && bun run pin",
    "audit": "bun audit",
    "prepare": "husky",
    "lint": "tsc --noEmit && eslint . && markdownlint-cli2 \"**/*.md\" \"!node_modules\" \"!test-output\"",
    "lint:fix": "eslint . --fix && markdownlint-cli2 \"**/*.md\" \"!node_modules\" \"!test-output\" --fix",
    "lint:eslint": "eslint .",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\" \"!node_modules\" \"!test-output\"",
    "lint:typescript": "tsc --noEmit"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@cspell/dict-css": "4.0.18",
    "@cspell/dict-de-de": "4.1.2",
    "@cspell/dict-en_us": "4.4.22",
    "@cspell/dict-html": "4.0.12",
    "@cspell/dict-node": "5.0.8",
    "@cspell/dict-npm": "5.2.19",
    "@cspell/dict-software-terms": "5.1.10",
    "@cspell/dict-typescript": "3.2.3",
    "@cspell/eslint-plugin": "9.2.2",
    "@eslint/js": "9.38.0",
    "@playwright/test": "1.56.1",
    "@types/node": "24.9.2",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "axe-playwright": "2.2.2",
    "chrome-launcher": "1.2.1",
    "cspell": "9.2.2",
    "dotenv": "16.4.7",
    "eslint": "9.38.0",
    "eslint-plugin-playwright": "2.2.2",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "62.0.0",
    "husky": "9.1.7",
    "lighthouse": "13.0.1",
    "lint-staged": "16.2.6",
    "markdownlint-cli2": "0.18.1",
    "npm-check-updates": "19.1.2",
    "playwright-bdd": "8.4.1",
    "ts-node": "10.9.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  }
}
